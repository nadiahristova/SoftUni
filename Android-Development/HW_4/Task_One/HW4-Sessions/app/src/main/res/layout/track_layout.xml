<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="14.5sp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:singleLine="false"
                android:text="BLa Bla Bla"
                android:padding="5dp"
                android:id="@+id/trackName"
                android:layout_below="@+id/trackImage"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/trackImage"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/trackArtistNtrackAlbum"
                android:layout_below="@+id/trackName"
                android:layout_centerHorizontal="true" />

            <!--<ProgressBar-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/trackProgress"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_alignRight="@+id/trackArtistNtrackAlbum"-->
                <!--android:layout_alignEnd="@+id/trackArtistNtrackAlbum" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/trackArtistNtrackAlbum"
                android:layout_centerHorizontal="true"
                android:weightSum="1">
                <ImageButton
                    android:layout_width="@dimen/player_btns_width"
                    android:layout_height="@dimen/player_btns_height"
                    android:id="@+id/fastBBtn"
                    android:src="@drawable/fast_backward"
                    android:layout_margin="10dp" />

                <ImageButton
                    android:layout_width="@dimen/player_btns_width"
                    android:layout_height="@dimen/player_btns_height"
                    android:id="@+id/playBtn"
                    android:src="@drawable/play"
                    android:layout_margin="10dp" />

                <ImageButton
                    android:layout_width="@dimen/player_btns_width"
                    android:layout_height="@dimen/player_btns_height"
                    android:id="@+id/fastFBtn"
                    android:src="@drawable/fast_forward"
                    android:layout_margin="10dp" />

                <ImageButton
                    android:layout_width="@dimen/player_btns_width"
                    android:layout_height="@dimen/player_btns_height"
                    android:id="@+id/pauseBtn"
                    android:src="@drawable/pause"
                    android:layout_margin="10dp"/>

                <ImageButton
                    android:layout_width="@dimen/player_btns_width"
                    android:layout_height="@dimen/player_btns_height"
                    android:src="@drawable/stop"
                    android:id="@+id/stopBtn"
                    android:layout_margin="10dp"/>
            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>